package com.example.planAndGoCRUD.dto;

import java.time.LocalDate;

public class UserBirthdayResponse {
    private Long id;
    private String name;
    private LocalDate birthDate;
    private String daysLeftText;

    public UserBirthdayResponse(Long id, String name, LocalDate birthDate, String daysLeftText) {
        this.id = id;
        this.name = name;
        this.birthDate = birthDate;
        this.daysLeftText = daysLeftText;
    }

    public Long getId() { return id; }
    public String getName() { return name; }
    public LocalDate getBirthDate() { return birthDate; }
    public String getDaysLeftText() { return daysLeftText; }
}
